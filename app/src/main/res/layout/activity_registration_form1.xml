<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".RegistrationForm1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Registration "
        android:layout_gravity="center"
        android:textColor="#3589c9"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registrationMobileNumberID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Mobile Number"
        android:inputType="number"
        android:maxLength="11"
        android:layout_margin="2dp" />
    <EditText
        android:id="@+id/registrationNidID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your NID Number"
        android:maxLength="14"
        android:inputType="number"
        android:layout_margin="2dp"/>
    <EditText
        android:id="@+id/registrationAddressID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Address"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Location"
            android:textColor="#5c5959"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner android:id="@+id/addreesSpinnerButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" >
        </Spinner>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:onClick="RegistrationButtonID2"
        android:layout_margin="15dp"/>

</LinearLayout>
</ScrollView>